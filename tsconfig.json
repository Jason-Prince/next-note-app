{
    "compilerOptions": {
        "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
        "module": "CommonJS",
        "target": "es2019",
        "jsx": "preserve",
        "strict": false,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "paths": {
            "@/*": ["*"],
            "@/api/*": ["pages/api/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/components/Navbar.js", "src/components/Layout.js"]
}
